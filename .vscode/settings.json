{
  "ros.distro": "jazzy",
  "python.analysis.extraPaths": [
    "${workspaceFolder}/pyslam",
    "${workspaceFolder}/thirdparty",
  ],
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true
  },
  "files.associations": {
    ".fantomasignore": "ignore",
    "*.c": "cpp",
    "*.cpp": "cpp",
    "*.hpp": "cpp",
    "*.h": "cpp",
    "__nullptr": "cpp",
    "any": "cpp",
    "initializer_list": "cpp",
    "new": "cpp",
    "optional": "cpp",
    "stdexcept": "cpp",
    "typeinfo": "cpp",
    "cctype": "cpp",
    "clocale": "cpp",
    "cmath": "cpp",
    "csetjmp": "cpp",
    "csignal": "cpp",
    "cstdarg": "cpp",
    "cstddef": "cpp",
    "cstdio": "cpp",
    "cstdlib": "cpp",
    "cstring": "cpp",
    "ctime": "cpp",
    "cwchar": "cpp",
    "cwctype": "cpp",
    "array": "cpp",
    "atomic": "cpp",
    "hash_map": "cpp",
    "hash_set": "cpp",
    "strstream": "cpp",
    "bit": "cpp",
    "bitset": "cpp",
    "cfenv": "cpp",
    "charconv": "cpp",
    "chrono": "cpp",
    "cinttypes": "cpp",
    "codecvt": "cpp",
    "complex": "cpp",
    "condition_variable": "cpp",
    "cstdint": "cpp",
    "deque": "cpp",
    "forward_list": "cpp",
    "list": "cpp",
    "map": "cpp",
    "set": "cpp",
    "unordered_map": "cpp",
    "unordered_set": "cpp",
    "vector": "cpp",
    "exception": "cpp",
    "algorithm": "cpp",
    "functional": "cpp",
    "iterator": "cpp",
    "memory": "cpp",
    "memory_resource": "cpp",
    "numeric": "cpp",
    "random": "cpp",
    "ratio": "cpp",
    "regex": "cpp",
    "string": "cpp",
    "string_view": "cpp",
    "system_error": "cpp",
    "tuple": "cpp",
    "type_traits": "cpp",
    "utility": "cpp",
    "slist": "cpp",
    "fstream": "cpp",
    "future": "cpp",
    "iomanip": "cpp",
    "iosfwd": "cpp",
    "iostream": "cpp",
    "istream": "cpp",
    "limits": "cpp",
    "mutex": "cpp",
    "ostream": "cpp",
    "shared_mutex": "cpp",
    "sstream": "cpp",
    "streambuf": "cpp",
    "thread": "cpp",
    "typeindex": "cpp",
    "valarray": "cpp",
    "variant": "cpp"
  },
  // C++ formatting - just tell VS Code to use clang-format
  "[cpp]": {
    "editor.formatOnSave": true
  },
  "[c]": {
    "editor.formatOnSave": true
  },
  "[hpp]": {
    "editor.formatOnSave": true
  },
  "[h]": {
    "editor.formatOnSave": true
  },
  // Tell VS Code to use your .clang-format file
  "C_Cpp.clang_format_style": "file",
  "C_Cpp.clang_format_path": "clang-format",
  "editor.formatOnSave": true,
  "commentTranslate.hover.enabled": false,
  // Disable Microsoft C++ IntelliSense - using clangd instead
  "C_Cpp.intelliSenseEngine": "disabled",
  "C_Cpp.autocomplete": "disabled",
  "C_Cpp.errorSquiggles": "disabled",
  "C_Cpp.suggestSnippets": false,
  "C_Cpp.enhancedColorization": "disabled",
  // Enable clangd for better C++ support
  "clangd.enabled": true,
  "clangd.arguments": [
    "--background-index",
    "--clang-tidy",
    "--completion-style=detailed",
    "--header-insertion=iwyu",
    "--header-insertion-decorators"
  ]
}
